.card
  display grid
  grid-template-columns auto 10vw
  background-color white
  border-radius 3px
  padding 6px 8px
  margin-top 10px
  box-shadow 0 1px 0 rgba(0, 0, 0, 0.25)
  font-family "Helvetica Neue", Arial, Helvetica, sans-serif
  color: #444
  cursor pointer

.draggingCard
  composes card
  opacity 0.3

.header
  font-size 14px
  justify-self start
  margin-bottom 2px
  width 100px
  overflow hidden

.buttons
  justify-self end

  & a
    color red
    margin 0 3px
    cursor pointer    
